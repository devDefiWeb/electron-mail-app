{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    // TODO get rid of "compilerOptions.skipLibCheck" option on https://github.com/angular/angular/issues/29220 resolving
    "skipLibCheck": true
  },
  "include": [
    "../../../src/@types/**/*",
    "../../../src/web/@types/index.d.ts",
    "../../../src/web/@types/electron-exposure.d.ts",
    "./**/*"
  ],
  "exclude": [
    "./**/*.spec.ts"
  ],
  // section is taken from the parent config, inheritance does not work here
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "fullTemplateTypeCheck": true,
    "disableTypeScriptVersionCheck": true,
    "strictInjectionParameters": true
  }
}
