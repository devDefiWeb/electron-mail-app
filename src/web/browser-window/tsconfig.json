{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    // TODO get rid of "compilerOptions.skipLibCheck" option on https://github.com/angular/angular/issues/29220 resolving
    "skipLibCheck": true
  },
  "include": [
    "../../../src/@types/**/*",
    "../../../src/web/@types/index.d.ts",
    "../../../src/web/@types/electron-exposure.d.ts",
    "./**/*"
  ],
  "exclude": [
    "./**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "disableTypeScriptVersionCheck": true,
    "strictInjectionParameters": true,
    // TODO angular ivy: get back templates type check after https://github.com/angular/angular/issues/30080 resolving
    "fullTemplateTypeCheck": false,
    "ivyTemplateTypeCheck": false,
    "enableIvy": true
  }
}
