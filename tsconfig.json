{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "declaration": false,
    "sourceMap": true,
    "lib": [
      "es2015",
      "es2017.object",
      "es2016.array.include",
      "dom"
    ],
    "outDir": "./app",
    "baseUrl": ".",
    "paths": {
      "_@shared/*": [
        "./src/shared/*"
      ],
      "_@web/*": [
        "./src/web/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
