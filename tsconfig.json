{
  "extends": "./tsconfig.checks.json",
  "compilerOptions": {
    /*
    resolving & capabilities
    */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    /*
    emitting
    */
    "target": "ESNext",
    "module": "ESNext",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "sourceMap": true,
    /*
    paths
    */
    "lib": [
      "es2015",
      "es2017.object",
      "es2021.string",
      "es2016.array.include",
      "dom"
    ],
    "outDir": "./app",
    "baseUrl": ".",
    "paths": {
      "remeda/*": [
        "./node_modules/remeda/dist/es/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      },
      {
        "transform": "ts-nameof",
        "type": "raw"
      }
    ]
  },
  "include": [
    "scripts/**/*",
    "src/**/*",
    "webpack-configs/**/*"
  ]
}
