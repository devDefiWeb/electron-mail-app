{
  "extends": "./tsconfig.checks.json",
  "compilerOptions": {
    /*
    resolving & capabilities
    */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    /*
    emitting
    */
    // TODO set "target" to "esnext" after updating Electron to v6 as Chrome 74+ is needed, see https://github.com/immerjs/immer/issues/346
    "target": "es2015",
    "module": "commonjs",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "sourceMap": true,
    /*
    paths
    */
    "lib": [
      "es2015",
      "es2017.object",
      "es2017.string",
      "es2016.array.include",
      "dom"
    ],
    "outDir": "./app",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
