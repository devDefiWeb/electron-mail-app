{
  "compilerOptions": {
    /*
    strictness
    */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true, // comes with "strict" flag
    "noImplicitReturns": true,
    // "noImplicitThis": true, // comes with "strict" flag
    "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "strictFunctionTypes": true, // comes with "strict" flag
    // "strictNullChecks": true, // comes with "strict" flag
    // "strictPropertyInitialization": true, // comes with "strict" flag
    /*
    resolving & capabilities
    */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    /*
    emitting
    */
    "target": "es2015",
    "module": "commonjs",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "sourceMap": true,
    /*
    paths
    */
    "lib": [
      "es2015",
      "es2017.object",
      "es2017.string",
      "es2016.array.include",
      "dom"
    ],
    "outDir": "./app",
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/monkey-patching",
      "./src/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
