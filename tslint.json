{
  "extends": [
    "tslint:recommended",
    "./tslint-codelyzer.json"
  ],
  "rulesDirectory": [
    "node_modules/tslint-rules-bunch/rules"
  ],
  "rules": {
    "no-import-zones": [
      true,
      {
        "verbose": false,
        "zones": [
          {
            "patterns": [
              {
                "target": "src/**/*",
                "from": "nano-sql"
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/**/*",
                "from": "package.json"
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/electron-main/**/*",
                "from": [
                  "src/**/*",
                  "!src/electron-main/**/*",
                  "!src/shared/**/*"
                ]
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/electron-preload/**/*",
                "from": [
                  "src/**/*",
                  "!src/electron-preload/**/*",
                  "!src/shared/**/*"
                ]
              }
            ]
          },
          {
            "patterns": [
              {
                "target": "src/web/src/**/*",
                "from": [
                  "src/**/*",
                  "!src/web/**/*",
                  "src/web/src/app",
                  "!src/shared/**/*",
                  "!src/web/src/app/store/**/*",
                  "!src/web/src/app/+shared/shared.module",
                  "!src/web/src/app/app.constants"
                ]
              }
            ]
          }
        ]
      }
    ],
    "no-unused-variable": true,
    "max-line-length": [
      true,
      140
    ],
    "prefer-for-of": true,
    "await-promise": true,
    "no-floating-promises": true,
    "no-empty-interface": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "member-access": false,
    "interface-name": false,
    "arrow-parens": [
      true
    ],
    "max-classes-per-file": [
      false
    ],
    "no-empty": false
  }
}
