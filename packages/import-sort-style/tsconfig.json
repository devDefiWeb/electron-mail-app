{
  // https://www.typescriptlang.org/docs/handbook/tsconfig-json.html
  // https://www.typescriptlang.org/docs/handbook/compiler-options.html
  "compilerOptions": {
    /*
    strictness
    */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true, // comes with "strict" flag
    "noImplicitReturns": true,
    // "noImplicitThis": true, // comes with "strict" flag
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "strictFunctionTypes": true, // comes with "strict" flag
    // "strictNullChecks": true, // comes with "strict" flag
    // "strictPropertyInitialization": true, // comes with "strict" flag
    /*
    resolving & capabilities
    */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    /*
    emitting
    */
    "target": "es2015",
    "module": "commonjs",
    "declaration": true,
    "noEmitOnError": true,
    "sourceMap": true,
    /*
    paths
    */
    "lib": [
      "es5",
      "es2015"
    ],
    "baseUrl": ".",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  }
}
